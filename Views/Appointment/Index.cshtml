@using Microsoft.AspNetCore.Identity 
@inject UserManager<ApplicationUser> UserManager
<div class="row">

    <div class="container">
        @if (User.IsInRole(AppointmentScheduling1.Helper.Roles.Admin))
        {
            <div class="form-group row col-2" id="divDoctorList">
                <label>Select Doctor</label>
                @Html.DropDownList("DoctorId", new SelectList(ViewBag.DoctorList, "Id", "Name"), new {@class = "form-control select2"
                 ,@onchange = "onDoctorChange();" })
            </div>
        }
        else if (User.IsInRole(AppointmentScheduling1.Helper.Roles.Doctor))
        {
            <input type="hidden" id="DoctorId" value=@UserManager.GetUserId(User) />
        } 
        
        <div id="calendar"> </div>
    </div>
</div>

<partial name="_AddEditAppointment" />

